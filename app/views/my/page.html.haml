#my-page
  %h3 マイページ
  #meeting-menu.card
    .card-header
      会議メニュー
    .card-body
      %ul
        %li
          = link_to 'マイ会議', my_meeting_path
        %li
          = link_to '新しい会議を作成する', new_meeting_path, class: "btn btn-primary"

  #user-menu.card
    .card-header
      ユーザーメニュー
    .card-body
      %ul
        %li
          = link_to 'ユーザ情報 確認／編集', edit_user_registration_path

  #group-menu.card
    .card-header
      グループメニュー
    .card-body
      - if current_user.groups.blank?
        %p 所属しているグループはありません。
      - else
        %label.control-label 所属グループ
        = render partial: 'my/groups', locals: { groups: current_user.groups}

      -#= link_to '新しいグループを作成する', new_group_path, class: "btn btn-primary"

  #project-menu.card
    .card-header
      プロジェクトメニュー
    .card-body
      - if current_user.projects.blank?
        %p 参加しているプロジェクトはありません。
      - else
        %label.control-label 参加プロジェクト
        = render partial: 'my/projects', locals: { projects: current_user.projects}

      = link_to '新しいプロジェクトを作成する', new_project_path, class: "btn btn-primary"

    -#%label 終了済みの参加プロジェクト
    -#%ul
      - @finished_projects.each do |project|
        %li= project.name

  #debug-menu.card
    .card-header
      デバッグ関連
    .card-body
      %ul
        %li
          = link_to 'メール送信テスト', my_mail_path
        %li
          = link_to '受信メール確認', letter_opener_web_path
