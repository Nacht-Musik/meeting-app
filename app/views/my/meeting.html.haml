.card
  .card-header
    %h4
      担当会議
    %ul.nav.nav-tabs.card-header-tabs
      %li.nav-item
        %a.active.nav-link{href: '#tab-all', 'data-toggle': 'tab'}
          全て
      %li.nav-item
        %a.nav-link{href: '#tab-future', 'data-toggle': 'tab'}
          開催予定
      %li.nav-item
        %a.nav-link{href: '#tab-making', 'data-toggle': 'tab'}
          作成中
      %li.nav-item
        %a.nav-link{href: '#tab-pending-to-inspect', 'data-toggle': 'tab'}
          審査待ち
      %li.nav-item
        %a.nav-link{href: '#tab-pending-to-approve', 'data-toggle': 'tab'}
          承認待ち
      %li.nav-item
        %a.nav-link{href: '#tab-pending-to-publish', 'data-toggle': 'tab'}
          公開待ち
      %li.nav-item
        %a.nav-link{href: '#tab-published', 'data-toggle': 'tab'}
          公開中

  .card-body
    .tab-content
      .tab-pane#tab-all.active
        = render "meeting_list_title", meetings: @meetings, users: @users, projects: @projects
      .tab-pane#tab-future
        「開催予定」の本体部分
      .tab-pane#tab-making
        「作成中」の本体部分
      .tab-pane#tab-pending-to-inspect
        「審査待ち」の本体部分
      .tab-pane#tab-pending-to-approve
        「承認待ち」の本体部分
      .tab-pane#tab-pending-to-publish
        「公開街」の本体部分
      .tab-pane#tab-published
        「公開中」の本体部分
%br
= link_to 'マイページに戻る', my_page_path
%br
