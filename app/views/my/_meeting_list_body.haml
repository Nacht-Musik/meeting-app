- meetings.each do |meeting|
  %tr
    %td= meeting.title
    %td= users.find(meeting.user_id).last_name + ' ' + users.find(meeting.user_id).first_name
    -#%td= projects.find(meeting.project_id).name
    %td= meeting.date
    %td
      = link_to fa_icon("file-text"), meeting_path(meeting), class: 'btn btn-outline-info'
    %td
      - if meeting.user_id == current_user.id
        = link_to fa_icon("edit"), edit_meeting_path(meeting), class: 'btn btn-outline-success'
    %td
      - if meeting.user_id == current_user.id
        = link_to fa_icon("trash"), meeting_path(meeting), method: :delete,
          data: { confirm: "「#{meeting.title}」を削除しますか？"},
          class: 'btn btn-outline-danger'
