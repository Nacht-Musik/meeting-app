.row
  .col-12.col-md-4
    .form-group
      =f.label '担当者', class: 'col-form-label'
      =f.label f.object.user.full_name,
                class: 'form-control bg-light text-body font-weight-bold font-italic'
      =f.hidden_field :user_id
      -#= f.collection_select :user_id, users, :id, :full_name,
                {selected: current_user.id},
                class: 'custom-select select2-selector'

  .col-12.col-md-4
    .form-group
      =f.label '審査者', class: 'col-form-label'
      = f.collection_select :inspector_id, users, :id, :full_name,
                    {include_blank: "---"},
                    class: 'custom-select select2-selector'

  .col-12.col-md-4
    .form-group
      =f.label '承認者', class: 'col-form-label'
      = f.collection_select :approver_id, users, :id, :full_name,
                    {include_blank: "---"},
                    class: 'custom-select select2-selector'

