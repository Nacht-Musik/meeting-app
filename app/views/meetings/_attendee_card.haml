.user-block
  = f.hidden_field :_destroy, class: "attendee-destroy-flag"
  = f.hidden_field :user_id, class: "attendee-user-id"

  .card.user-card.float-left.border-dark
    .card-body
      .input-group
        %a.user-name= "#{f.object.user.full_name}"
        .input-group-append
          %a.attendee-del-btn.btn.btn-danger{tabindex: "-1"}
            = fa_icon('times')
