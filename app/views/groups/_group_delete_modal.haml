#group-del-modal.modal.fade{"aria-hidden": "true",
                            "aria-labelledby": "groupDelModalCenterTitle",
                            role: "dialog", :tabindex => "-1"}
  .modal-dialog.modal-dialog-centered{:role => "document"}
    .modal-content
      .modal-header
        %h5#groupDelModalLongTitle.modal-title
          このグループを本当に削除しますか？
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} ×
      .modal-body
        .form-group
          %label グループ名
          #group-del-modal-user-name.form-control
            = group_name

      .modal-footer
        %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} キャンセル
        = link_to 'このグループを削除する', group_path, method: :delete,
                  class: "btn btn-danger"
